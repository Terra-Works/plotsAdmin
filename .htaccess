# Redirigir todas las solicitudes a index.php para ser gestionadas por el router
RewriteEngine On

# Asegurarse de que el RewriteBase sea correcto
# Si tu aplicación está en una subcarpeta, ajusta esto
RewriteBase /public/

# No procesar archivos o carpetas reales
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirigir todas las demás solicitudes a index.php
RewriteRule ^(.*)$ index.php [QSA,L]
